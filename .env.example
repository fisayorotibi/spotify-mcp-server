# Environment variables for Spotify MCP Server
# Copy this file to .env and fill in your credentials

SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Required if using Authorization Code flow with redirect
SPOTIFY_REDIRECT_URI=http://localhost:5173/callback

# Scopes to request for user authorization
# Separate by spaces
SPOTIFY_SCOPES=user-read-playback-state user-modify-playback-state user-read-currently-playing user-read-email user-read-private

# MCP server configuration
MCP_SERVER_NAME=spotify-mcp-server
MCP_SERVER_PORT=7312
# Optional: customize the SSE path (default /sse)
MCP_SSE_PATH=/sse
